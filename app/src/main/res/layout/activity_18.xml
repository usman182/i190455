<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".activity_2">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/black"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_arrow_back_24" />


        <EditText
            android:layout_width="355dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/rounded_texts"
            android:hint="Search"
            android:padding="15dp"
            android:textColorHint="@color/corn"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="70dp"
            android:text="Recent Searches"
            android:textColor="@color/corn"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/despacitosmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="130dp"
            android:src="@drawable/despacitosmall" />

        <TextView
            android:id="@+id/songname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="135dp"
            android:layout_toRightOf="@+id/despacitosmall"
            android:text="Song Name"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="170dp"
            android:layout_toRightOf="@+id/despacitosmall"
            android:text="Artist"
            android:textColor="@color/corn"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/clear"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="145dp"
            android:layout_marginTop="160dp"
            android:layout_toRightOf="@+id/songname"
            android:background="@drawable/ic_baseline_clear_24" />

        <ImageView
            android:id="@+id/despacitosmall2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/despacitosmall"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/playlistsmall" />

        <TextView
            android:id="@+id/songname2"
            android:layout_below="@+id/songname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/despacitosmall2"
            android:layout_marginTop="90dp"
            android:layout_marginStart="15dp"
            android:text="Song Name"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/artist"
            android:layout_marginStart="15dp"
            android:layout_marginTop="90dp"
            android:layout_toRightOf="@+id/despacitosmall2"
            android:text="Artist"
            android:textColor="@color/corn"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/songname2"
            android:layout_marginTop="280dp"
            android:layout_marginStart="145dp"
            android:background="@drawable/ic_baseline_clear_24" />

        <ImageView
            android:id="@+id/despacitosmall3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/despacitosmall2"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/playlistsmall" />

        <TextView
            android:id="@+id/songname3"
            android:layout_below="@+id/songname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/despacitosmall3"
            android:layout_marginTop="200dp"
            android:layout_marginStart="15dp"
            android:text="Song Name"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/artist"
            android:layout_marginStart="15dp"
            android:layout_marginTop="200dp"
            android:layout_toRightOf="@+id/despacitosmall3"
            android:text="Artist"
            android:textColor="@color/corn"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/songname3"
            android:layout_marginTop="380dp"
            android:layout_marginStart="145dp"
            android:background="@drawable/ic_baseline_clear_24" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="195dp">


        <ImageButton
            android:id="@+id/love"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#2a2831"
            android:padding="40dp"
            android:src="@drawable/love" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#2a2831"
            android:padding="40dp"
            android:src="@drawable/plus" />

        <ImageButton
            android:id="@+id/search1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#2a2831"
            android:padding="40dp"
            android:src="@drawable/search" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#2a2831"
            android:padding="40dp"
            android:src="@drawable/listenlater" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2a2831">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="Liked"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="#2a2831"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:text="Add"
            android:textColor="@color/white"
            android:background="#2a2831"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/search2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:text="Search"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="listen Later"
            android:textColor="@color/white"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>
